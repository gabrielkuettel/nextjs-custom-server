{
  "name": "payload-nextjs-server",
  "description": "A boilerplate project for NextJS with Payload CMS",
  "keywords": [
    "payload",
    "cms",
    "nextjs"
  ],
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "author": "TRBL",
  "scripts": {
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:payload": "payload build",
    "copyfiles:media": "copyfiles -u 1 media/**/*.{svg,jpg,png} dist/media",
    "generate:types": "payload generate:types",
    "build": "cross-env NODE_ENV=production yarn build:payload && yarn build:server && yarn copyfiles:media && yarn build:next",
    "dev": "ts-node server.ts",
    "seed": "ts-node seed/index.js",
    "serve": "cross-env NODE_ENV=production PAYLOAD_CONFIG_PATH=dist/payload.config.js node dist/server.js",
    "format": "npx prettier --write . --ignore-path .gitignore --cache",
    "lint": "next lint -- --ignore-path .gitignore",
    "lint:fix": "npm run format && npm run lint -- --fix",
    "start": "next start",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.0",
    "escape-html": "^1.0.3",
    "express": "^4.18.0",
    "next": "^13.2.3",
    "payload": "^1.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.52.0",
    "slate": "^0.72.8",
    "typescript": "^4.7.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/express": "^4.17.11",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "eslint-config-next": "^13.4.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-jest-dom": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "postcss": "^8.4.23",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.8.0"
  }
}
